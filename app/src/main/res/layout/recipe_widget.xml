<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin">


  <TextView
    android:id="@+id/widget_recipe_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:contentDescription="@string/recipe_title_text"
    android:padding="@dimen/minipad"
    android:tag="Example"
    android:text="@string/recipe_title_text"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:textStyle="bold"/>

  <TextView
    android:id="@+id/widget_recipe_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/widget_recipe_title"
    android:background="@color/white"
    android:contentDescription="@string/recipe_body_text"
    android:padding="8dp"
    android:text="@string/recipe_body_text"
    android:textColor="@color/black"
    android:textSize="16sp"
    />

</RelativeLayout>
