<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="AppCompat.Base"></style>
  <style name="AppCompat.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="FancyRecipeTitle">
    <item name="android:background">@color/colorTransparentAccent</item>
    <item name="android:padding">@dimen/pad</item>
    <item name="android:fontFamily">cursive</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="SubTitle">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:paddingLeft">@dimen/pad</item>
    <item name="android:paddingRight">@dimen/pad</item>
    <item name="android:paddingTop">@dimen/minipad</item>
    <item name="android:paddingBottom">@dimen/minipad</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="StepStyle">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:paddingLeft">@dimen/pad</item>
    <item name="android:paddingRight">@dimen/pad</item>
    <item name="android:paddingTop">@dimen/minipad</item>
    <item name="android:paddingBottom">@dimen/minipad</item>
    <item name="android:textSize">18sp</item>
    <item name="android:background">@drawable/step_background</item>
  </style>

</resources>
